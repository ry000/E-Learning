v-box
    flex-box
        .content.block-layout(style="overflow: auto")
            c-panel(caption=ll.l("查询条件"))
                c-form(c-bind="condition")
                    fields.cols-3
                        field(property="paperName")
                            label 试卷名称
                            c-input
                        field(property="subject")
                            label 科目
                            c-dropdown(valueProperty="key" textProperty="name" c-items="subjectname")
                        field
                            c-button(caption="查询" click="queryPaper")
            c-panel(caption=ll.l("查询结果"))
                .content
                    c-table(bind="paperSearchResult")
                        column(property="paperID" caption="试卷ID" sortable="true")
                        column(property="paperName" caption="试卷名称" sortable="true")
                        column(property="subject" caption="科目" sortable="true")
                        column(property="totalScore" caption="分数" sortable="true")
                        column(caption="参加考试" align="center")
                            template
                                c-button(caption="参加考试")
                        column(caption="查看已完成成绩" align="center")
                            template
                                c-button(caption="查看已完成成绩")
            c-pager(bind="paperSearchResult")